{{!< sign}}

{{#contentFor "title"}}Sign in to slackerQ{{/contentFor}}
<div class="col-md-6 col-md-push-3">
<form class="form-sign col-md-12" action="/signin" method="post" role="b-ajaxForm">
    <h2 class="form-signin-heading">Sign in</h2>
    <div class="form-sign-list">
        <input type="text" name="username" autofocus required placeholder="Email or Username" class="form-control">
        <input type="password" name="password" required placeholder="Password" class="form-control">
    </div>

    <label class="alert alert-danger b-ajaxForm__errorMessage"></label>

    <button type="submit" class="btn btn-lg btn-primary btn-block b-ajaxForm__submitButton" autocomplete="off">Sign in</button>

    <div class="form-group">
        <label class="help-block">
            <a href="/signup"> No slackerQ account? Sign up here</a>.
        </label>
    </div>
</form>
<div class="form-group" role="b-signin" onclick="return {forgotPasswordUrl: '/profile/forgotpassword', forgotUsernameUrl: '/profile/forgotUsername', resetPasswordUrl:'/profile/reset'}">
        <div class="alert alert-danger help-block b-signin__errorMessage"></div>
        <div class="alert alert-success help-block b-signin__successMessage"></div>

        <label class="help-block">
            Forgot Username/Password ? <a class="b-signin__forgotButton" href="#forgot">Click here</a>.
        </label>
        <div class="modal fade b-signin__popup" id='forgot'>
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                        <h4 class="modal-title">Forgotten Username/Password</h4>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-12">
                                    Forgotten your password or username? Enter your email in the box below and we'll send you your username and a password reset link.
                                </div>
                                <label class="input-group bootstrap-date col-md-6 col-md-push-3">
                                    <input type="text" name="email" class="form-control b-signin__email" autocomplete="off" placeholder="Enter Email"/>
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-success b-signin__modalSubmitPassword" date-loading="Sending Password...">Submit</button>
                    </div>
                </div><!-- /.modal-content -->
            </div><!-- /.modal-dialog -->
        </div><!-- /.modal -->
        <div class="modal fade b-signin__resetpopup" id="reset">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                        <h4 class="modal-title">Reset Password</h4>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <div class="row">
                                <label class="input-group bootstrap-date col-lg-6 col-md-push-3">
                                    <input type="password" name="newPassword" class="form-control b-signin__newPassword" autocomplete="off" placeholder="Enter a new password"/>
                                </label>
                            </div>
                            <div class="row">
                                <label class="input-group bootstrap-date col-lg-6 col-md-push-3">
                                    <input type="password" name="repeatNewPassword" class="form-control b-signin__repeatNewPassword" autocomplete="off" placeholder="Enter it again"/>
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary b-signin__modalresetPassword" date-loading="Resetting...">Reset Password</button>
                    </div>
                </div><!-- /.modal-content -->
            </div><!-- /.modal-dialog -->
        </div><!-- /.modal -->
    </div>
</div>
{{#contentFor 'footerscripts'}}
<script>$(document).ready(function(){
$(window.location.hash).modal('show');
});</script>
{{/contentFor}}