{{!< default}} {{#contentFor "title"}}Ping Activity{{/contentFor}}
<h2>Activity</h2>
<div class="row">
	<div class="col-md-12 b-activity" role="b-activity">
		<div class="list-group">
    {{#unless activity.length}}
        <div class="alert alert-warning">No Activity yet.</div>
    {{/unless}}
    {{#if activity.length}}
    <table class="table table-striped table-bordered table-hover">
        <thead>
        <tr>
            <th>Date</th>
            <th>Activity</th>
        </tr>
        </thead>
        <tbody>

        {{#each activity}}
            <tr class="b-activity__item" data-id="{{_id}}">
            <td>
                {{formatDate date}}
            </td>
            <td>
                {{activity}}
            </td>
            </tr>
        {{/each}}
        </tbody>
    </table>
    {{/if}}
</div>
		</div>
	</div>